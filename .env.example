# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Application Configuration
NODE_ENV=development
PORT=5000

# Session Configuration
SESSION_SECRET=your-session-secret-here

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Stripe Configuration (Optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# PayPal Configuration (REQUIRED - No fallback credentials for security)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Security Configuration for Shopping Cart
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5000,https://yourproductiondomain.com
MAX_TRANSACTION_AMOUNT=10000

# PayFast Configuration (Optional - for South African ZAR payments)
PAYFAST_MERCHANT_ID=your_payfast_merchant_id
PAYFAST_MERCHANT_KEY=your_payfast_merchant_key
PAYFAST_PASSPHRASE=your_payfast_passphrase

# OpenAI Configuration (Optional)
OPENAI_API_KEY=your_openai_api_key

# Monitoring & Observability (Optional)
SENTRY_DSN=your_sentry_dsn

# Feature Flags (Optional)
ENABLE_METRICS=true
ENABLE_CACHE=false
